                            <Border Name="Border"
                                Margin="0,0,-4,0"
                                Background="{x:Static Brushes.Transparent}"
                                BorderBrush="{x:Static Brushes.White}"
                                BorderThickness="1,1,1,1"
                                CornerRadius="12,12,0,0">
